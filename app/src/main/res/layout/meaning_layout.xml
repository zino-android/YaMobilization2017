<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/transl_text_view"
        android:layout_toRightOf="@+id/number_text_view"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/synonym_text_view"
        android:layout_below="@+id/transl_text_view"
        android:layout_toRightOf="@+id/number_text_view"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:textColor="@color/brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/example_text_view"
        android:layout_below="@+id/synonym_text_view"
        android:layout_toRightOf="@+id/number_text_view"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="@color/exampleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>